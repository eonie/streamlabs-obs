{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "plugins": [
    "vue"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "class-methods-use-this": "off",
    "no-prototype-builtins": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "prefer-rest-params": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "spaced-comment": "off"
  }
}
